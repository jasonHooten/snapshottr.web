<iframe id="html-source" src="/snap/viewHtml?id=<%= id %>" seamless="seamless" width="100%" height="1px" onLoad="calcHeight();"></iframe>

<footer style="max-height: 100px; background-color: #dfdfdf;">
    <div class="well">
        
        <div>
            <label>Url:</label> <strong><%= url %></strong>
        </div>
    </div>
</footer>

<script type="text/x-handlebars" id="likes">
<div class='likes'>
    <div class="controls">
        {{#if model.like > 0}}
        <button {{action 'like' model}} class="btn btn-info btn-sm">Likes({{ model.like }})</button>
        {{else}}
        <button {{action 'like' model}} class="btn btn-info btn-sm">Be the first to Like this.</button>
        {{/if}}
    </div>
</div>
</script>

<script type="text/javascript">
    function calcHeight() {
        //find the height of the internal page
        var the_height =
            document.getElementById('html-source').contentWindow.
                document.body.scrollHeight;

        //change the height of the iframe
        document.getElementById('html-source').height = the_height - 120 - 23;
    }
</script>


